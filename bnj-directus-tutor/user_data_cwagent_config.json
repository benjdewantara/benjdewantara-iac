{
  "agent": {
    "metrics_collection_interval": 60
  },
  "metrics": {
    "namespace": "CWAgent",
    "append_dimensions": {
      "ImageId": "$${aws:ImageId}",
      "InstanceId": "$${aws:InstanceId}",
      "InstanceType": "$${aws:InstanceType}"
    },
    "metrics_collected": {
      "mem": {
        "measurement": [
          "used_percent"
        ]
      },
      "cpu": {
        "measurement": [
          "time_active"
        ]
      }
    }
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/var/log/app-*.log",
            "log_group_name": "${tf_projectname}",
            "log_stream_name": "${tf_projectname}/{instance_id}",
            "retention_in_days": 3
          }
        ]
      }
    }
  }
}